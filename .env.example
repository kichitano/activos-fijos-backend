# ===== ENVIRONMENT =====
NODE_ENV=development

# ===== SERVER =====
PORT=3000
HOST=localhost

# ===== DATABASE =====
# PostgreSQL 15+ requerido
# Antes de iniciar la app, ejecutar: psql -U postgres -f database/init.sql
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=activos_fijos_db

# ===== JWT =====
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION_SHORT=7d
JWT_REFRESH_EXPIRATION_LONG=30d

# ===== BCRYPT =====
BCRYPT_SALT_ROUNDS=12

# ===== CORS =====
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# ===== LOGGING =====
# Nivel de log: error, warn, info, debug
LOG_LEVEL=info
# Directorio de logs (solo en producción o si se especifica)
LOG_DIR=./logs
# Retención de archivos de log (días o tamaño)
LOG_MAX_FILES=14d
# Tamaño máximo de archivo de log
LOG_MAX_SIZE=10m
